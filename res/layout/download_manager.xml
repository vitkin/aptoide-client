<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/custom_background_color" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/exit"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/downloading_apps"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/downloading_intro"
                style="@style/label_style"
                android:text="@string/downloading_apps" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp" >

                <ListView
                    android:id="@+id/downloading_list"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/custom_inside_background_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/downloaded_apps"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/downloaded_intro"
                style="@style/label_style"
                android:text="@string/downloaded_apps" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp" >

                <ListView
                    android:id="@+id/downloaded_list"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/custom_inside_background_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/failed_apps"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/failed_intro"
                style="@style/label_style"
                android:text="@string/not_downloaded_apps" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp" >

                <ListView
                    android:id="@+id/failed_list"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/custom_inside_background_color" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/no_downloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:text="@string/no_downloads"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/exit"
        style="@style/gray_button_style"
        android:layout_alignParentBottom="true"
        android:text="@string/back" />

</RelativeLayout><!--
