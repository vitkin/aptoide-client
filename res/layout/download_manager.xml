<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#edece9"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/downloading_apps"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/downloading_intro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/header_background"
            android:padding="10dp"
            android:text="@string/downloading_apps"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />

        <ListView
            android:id="@+id/downloading_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_background_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/downloaded_apps"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/downloading_apps"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/downloaded_intro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/header_background"
            android:padding="10dp"
            android:text="@string/downloaded_apps"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />

        <ListView
            android:id="@+id/downloaded_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_background_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/failed_apps"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/downloaded_apps"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/failed_intro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/header_background"
            android:padding="10dp"
            android:text="@string/not_downloaded_apps"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />

        <ListView
            android:id="@+id/failed_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_background_normal" />
    </LinearLayout>

    <Button
        android:id="@+id/exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/retrn"
        android:visibility="visible" />

</LinearLayout>
