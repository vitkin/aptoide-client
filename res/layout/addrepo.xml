<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
    	android:text="Uri to repository"
    	android:layout_width="wrap_content"
        android:ems="20"
        android:textSize="16dip"
        android:layout_height="wrap_content"/>
    
    <EditText
        android:id="@+id/edit_uri"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:ems="20"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="textUri"
        android:text="http://"/>
        
        
        <TextView
        android:id="@+id/sec_msg"
    	android:text="Can't connect to repository"
    	android:layout_width="wrap_content"
    	android:layout_gravity="center"
    	android:textColor="#CC1100"
        android:textSize="16dip"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
        
	<View
	android:layout_marginTop="10dip"
	android:layout_marginBottom="10dip"
	android:layout_marginLeft="25dip"
	android:layout_marginRight="25dip"
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:paddingLeft="25dip"
    android:background="#FFF5F5F5"
	/>
	
	<TextView
    	android:id="@+id/sec_msg2"
    	android:layout_width="wrap_content"
    	android:layout_gravity="center"
    	android:textColor="#CC1100"
        android:textSize="16dip"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
	
  <CheckBox
  	android:id="@+id/secure_chk"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text="Private"
  	/>
	
   <EditText
        android:id="@+id/sec_user"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:ems="20"
        android:hint="Username"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:enabled="false"/>
        
    <EditText
        android:id="@+id/sec_pwd"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:ems="20"
        android:hint="Password"
        android:password="true"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:enabled="false"/>  
        
        
</LinearLayout>
