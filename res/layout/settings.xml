<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    
    <LinearLayout
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight = "1">
     
      <RadioGroup android:layout_width="fill_parent"
          android:layout_height="wrap_content" 
          android:orientation="vertical"
          android:layout_marginTop="10sp"
          android:id="@+id/groupshow">
          <TextView android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="@string/order_popup_title2" 
               android:textStyle="bold" />
          <RadioButton android:checked="false"
               android:text="@string/order_popup_catg1" 
               android:id="@+id/shw_ct" />
          <RadioButton android:checked="true"
               android:text="@string/order_popup_catg2" 
               android:id="@+id/shw_all" />
     </RadioGroup>
     
      <View
    android:layout_height="0.5dip"
    android:layout_width="fill_parent"
    android:background="#FFFFFF" />
     
      <RadioGroup android:layout_width="fill_parent"
          android:layout_height="wrap_content" 
          android:orientation="vertical"
		  android:layout_marginTop="10sp"
          android:id="@+id/groupicons">
          <TextView android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="Donwload icons if connected by:" 
               android:textStyle="bold"/>
          <RadioButton android:checked="false"
               android:text="Mobile 3G and Wifi" 
               android:id="@+id/w3g" />
          <RadioButton android:checked="false"
               android:text="Wifi only" 
               android:id="@+id/wonly" />
          <RadioButton android:checked="true"
               android:text="Never" 
               android:id="@+id/never" />
     </RadioGroup>
     
</LinearLayout>
     
