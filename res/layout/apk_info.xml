<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" 
android:gravity="center_horizontal"
android:layout_width="fill_parent" 
android:layout_height="fill_parent"
android:background="#ffffffff">
    
	<!--	Green Bar  	-->
     <RelativeLayout 
    android:orientation="vertical" 
    android:layout_gravity="top" 
    android:layout_height="44sp" 
    android:id="@+id/actionbar" 
    android:layout_width="fill_parent"
    android:background="#83c200">
	    <LinearLayout android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal" 
	    android:layout_gravity="center" 
	    android:id="@+id/greenbar">

	    </LinearLayout>
	    <ImageView android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:src="@drawable/icon" 
	    android:id="@+id/aptoideicon" 
	    android:layout_alignParentTop="true" 
	    android:layout_toRightOf="@+id/greenbar" 
	    android:layout_margin="2sp"></ImageView>
	    <ImageView android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:src="@drawable/aptoidebrand"
	    android:id="@+id/imageView1" 
	    android:layout_centerVertical="true" 
	    android:layout_centerHorizontal="true" android:layout_marginTop="10sp" android:layout_marginBottom="10sp"></ImageView>
	    <ImageButton android:layout_width="wrap_content" 
	    android:id="@+id/btsearch" 
	    android:layout_height="wrap_content" 
	    android:background="@drawable/btsearch" 
	    android:layout_alignParentRight="true" 
	    android:layout_centerVertical="true"></ImageButton>
	</RelativeLayout>
	
	<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#ffffffff"
	android:layout_below="@+id/actionbar"
	 android:layout_above="@+id/bottombar"
	android:id="@+id/info">
		<ImageView android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:src="@drawable/icon" 
			android:id="@+id/app_hashid"
			android:layout_marginLeft="20sp" android:layout_marginTop="20sp"></ImageView>
		<TextView android:textAppearance="?android:attr/textAppearanceLarge" 
			android:textColor="#4f4f4f"
			android:text="name" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_alignTop="@+id/app_hashid" 
			android:layout_toRightOf="@+id/app_hashid" 
			android:layout_marginLeft="23sp" 
			android:id="@+id/app_name"></TextView>
		<RatingBar android:id="@+id/stars"
			style="?android:attr/ratingBarStyleSmall" 
			android:layout_alignLeft="@+id/app_name"
			android:layout_below="@+id/app_name" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"></RatingBar>
		<TextView android:textAppearance="?android:attr/textAppearanceMedium" 
			android:textColor="#4f4f4f"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_below="@+id/stars" 
			android:layout_alignLeft="@+id/stars" 
			android:id="@+id/size" android:layout_alignRight="@+id/stars" android:layout_alignBottom="@+id/app_hashid"></TextView>
		<TextView android:textAppearance="?android:attr/textAppearanceMedium" 
			android:textColor="#4f4f4f"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_alignBottom="@+id/stars" 
			android:layout_toRightOf="@+id/size" 
			android:layout_alignTop="@+id/stars" 
			android:id="@+id/downloads"></TextView>
	
		<LinearLayout android:layout_width="fill_parent"
    		android:layout_height="fill_parent" 
    		android:layout_below="@+id/app_hashid" android:orientation="vertical">
    		<TextView android:text="About"
	            android:textColor="#4f4f4f"
	            android:padding="3sp" 
	            android:layout_width="fill_parent" 
	            android:layout_height="wrap_content" 
	            android:layout_gravity="left" 
	            android:id="@+id/about"/>
    		<TextView android:layout_height="wrap_content" 
	    		 android:textAppearance="?android:attr/textAppearanceSmall" 
	    		 android:padding="3sp" 
	    		 android:id="@+id/description" 
	    		 android:layout_width="fill_parent"></TextView>
			<TextView android:text="Screenshots"
	            android:textColor="#4f4f4f"
	            android:padding="3sp" 
	            android:layout_width="fill_parent" 
	            android:layout_height="wrap_content" 
	            android:layout_gravity="left" android:id="@+id/screenshots"/>
			<ProgressBar android:id="@+id/progressbarscreens"
 				android:layout_width="wrap_content"
  				android:layout_height="wrap_content" 
  				android:layout_gravity="center"/>
  			<TextView android:layout_height="wrap_content" 
  				android:layout_width="fill_parent"
            	android:id="@+id/noscreens"
            	android:textAppearance="?android:attr/textAppearanceSmall" 
            	android:padding="3sp" />
        	<Gallery android:id="@+id/galleryScreenshots" 
        		android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
        	<Button android:text="Write a comment" 
	        	android:id="@+id/btcommentapp" 
	        	android:padding="3sp"
	        	android:layout_width="fill_parent" 
	        	android:layout_height="wrap_content"></Button>
			<Button android:text="Tell a friend" 
	        	android:id="@+id/bttellfriend" 
	        	android:padding="3sp"
	        	android:layout_width="fill_parent" 
	        	android:layout_height="wrap_content"></Button>
	        	
	        		<TableLayout android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:paddingTop="10.0dip"
						android:paddingLeft="5.0sp" android:paddingRight="5.0sp"
						android:stretchColumns="0">
				
						<TableRow>
							<TextView android:textColor="#FFFFFF" android:id="@+id/likes"
								android:layout_width="fill_parent" android:layout_height="wrap_content" />
							<TextView android:textColor="#FFFFFF" android:id="@+id/dislikes"
								android:layout_width="fill_parent" android:layout_height="wrap_content" />	
						</TableRow>
				
						<TableRow>
							<ImageView android:id="@+id/likesImage"
								android:layout_width="fill_parent" android:layout_height="wrap_content"
								android:layout_gravity="left" android:visibility="visible"
								android:src="@drawable/like" android:layout_weight="1"/>
				
							<ImageView android:id="@+id/dislikesImage"
								android:layout_width="fill_parent" android:layout_height="wrap_content"
								android:layout_gravity="left" android:visibility="visible"
								android:src="@drawable/dontlike" android:layout_weight="1"/>
						</TableRow>
					</TableLayout>
					
			<Spinner android:id="@+id/spinnerMultiVersion"
				android:prompt="@string/multi_ver_prompt" 
				android:padding="3sp"
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent"/>	
		</LinearLayout>
	
	
	</RelativeLayout>
	
	<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="40dp"
	android:layout_alignParentBottom="true" 
	android:id="@+id/bottombar">
		<Button android:layout_height="wrap_content" 
		android:text="install" 
		android:layout_width="wrap_content" 
		android:layout_alignParentTop="true" 
		android:layout_alignParentLeft="true" 
		android:layout_marginLeft="28sp"
		android:id="@+id/btInstall"></Button>
		<Button android:layout_height="wrap_content" 
		android:text="install later" 
		android:layout_width="wrap_content"
		android:layout_alignParentTop="true" 
		android:id="@+id/btInstallLater" 
		android:layout_centerHorizontal="true"></Button>
		<Button android:layout_height="wrap_content" 
		android:text="market" 
		android:layout_width="wrap_content" 
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="28sp" 
		android:id="@+id/btmarket" ></Button>
	
	</RelativeLayout>
	
</RelativeLayout>