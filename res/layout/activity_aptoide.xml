<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/cm.aptoide.pt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
    android:id="@+id/actionbar"
    layout="@layout/actionbar" />

    <cm.aptoide.com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="?attr/viewPagerIndicatorBackground"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:footerColor="?attr/custom_color"
        app:footerLineHeight="1dp"
        app:selectedColor="?attr/custom_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

</LinearLayout>