<?xml version="1.0" encoding="UTF-8"?>

<ScrollView android:id="@+id/display_options_scroll" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

      <RadioGroup android:layout_width="fill_parent"
          android:layout_height="wrap_content" android:orientation="vertical"
          android:id="@+id/group_show">
          <TextView android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="@string/show_applications_by" 
               android:textStyle="bold" />
          <RadioButton android:checked="false"
               android:text="@string/category" 
               android:id="@+id/by_category" />
          <RadioButton android:checked="true"
               android:text="@string/all_applications" 
               android:id="@+id/by_all" />
     </RadioGroup>  

    <View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FFFFFFFF"
    		android:layout_marginBottom="9sp" android:layout_marginTop="9sp" android:layout_marginLeft="10sp"
    		android:layout_marginRight="10sp" android:id="@+id/spacer"/>
    
   <RadioGroup android:layout_width="fill_parent"
         android:layout_height="wrap_content" android:orientation="vertical"
         android:id="@+id/group_sort">
         <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/sort_applications_by"
              android:textStyle="bold" />
         <RadioButton android:checked="false"
              android:text="@string/alphabetic"
              android:id="@+id/by_alphabetic" />
         <RadioButton android:checked="false"
              android:text="@string/freshness"
              android:id="@+id/by_freshness" />
         <RadioButton android:checked="false"
              android:text="@string/stars"
              android:id="@+id/by_stars" />
         <RadioButton android:checked="false"
              android:text="@string/downloads"
              android:id="@+id/by_downloads" />
    </RadioGroup>
     
</LinearLayout>

</ScrollView>
