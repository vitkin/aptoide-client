<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <!-- Green Bar -->

    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="44sp"
        android:layout_gravity="top"
        android:background="@drawable/greenbarwithshadow"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/aptoideicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_margin="2sp"
            android:src="@drawable/icon" />

        <ImageView
            android:id="@+id/aptoidebrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/aptoideicon"
            android:padding="5dp"
            android:scaleType="fitStart"
            android:src="@drawable/aptoidebrand" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="#edece9"
        android:gravity="top"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_above="@+id/continue_bt"
            android:layout_below="@+id/content_layout"
            android:background="@drawable/border"
            android:gravity="bottom"
            android:padding="5dp" >

            <ListView
                android:id="@android:id/list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="@android:color/transparent" >
                <!-- Preview: listitem=@layout/sch_download -->
            </ListView>

            <TextView
                android:id="@android:id/empty"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignTop="@android:id/list"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/no_repo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4f4f4f" />

        </RelativeLayout>

        <Button
            android:id="@+id/continue_bt"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/continue_bt"/>
    </RelativeLayout>
</LinearLayout>