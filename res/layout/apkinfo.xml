<?xml version="1.0" encoding="UTF-8"?>

  				
    <LinearLayout 
    		android:orientation="vertical" 
    		android:layout_width="fill_parent" 
    		android:layout_height="fill_parent"
    		xmlns:android="http://schemas.android.com/apk/res/android"
    		>
    		
    	<RelativeLayout 
    				android:background="@android:drawable/bottom_bar" 
    				android:layout_width="fill_parent" 
    				android:layout_height="wrap_content">
    			
    		<LinearLayout 
    		android:orientation="horizontal" 
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content">	
    			
    				 
    			<ImageView android:id="@+id/appicon"
					android:paddingLeft="5.0sp"
    			    android:paddingTop="5.0dip"
    			    android:layout_width = "65px"
    			    android:layout_height = "65px"
        			android:cropToPadding ="true"
        			android:scaleType="fitCenter"
        			android:layout_gravity="center_vertical|center_horizontal" />	
        			
        		<LinearLayout 
    				android:orientation="vertical" 
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content">
    				
    				<TextView 
            			android:id="@+id/app_name"
            			android:textAppearance="?android:textAppearanceLarge" 
            			android:textSize="18.0sp" 
            			android:textStyle="bold"
            			android:gravity="left" 
            			android:layout_gravity="top" 
            			android:paddingTop="5.0dip"
            			android:paddingLeft="5.0sp"
            			android:paddingRight="5.0sp" 
            			android:layout_width="fill_parent" 
            			android:layout_height="wrap_content"
    					android:scrollHorizontally="true"/>
            		
            	<LinearLayout 
    				android:orientation="horizontal" 
    				android:layout_width="fill_parent" 
    				android:layout_height="wrap_content">
            			
            			
            	<LinearLayout 
    				android:orientation="vertical" 
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content">
            			
            		<TextView 
            			android:id="@+id/app_ver"
            			android:textAppearance="?android:textAppearanceLarge" 
            			android:textSize="12.0sp" 
            			android:textStyle="bold"
            			android:gravity="left" 
            			android:layout_gravity="top" 
            			android:paddingLeft="5.0sp"
            			android:paddingRight="5.0sp" 
            			android:layout_width="fill_parent" 
            			android:layout_height="wrap_content"/>
            		
            		<TextView 
            			android:id="@+id/app_repo"
            			android:textAppearance="?android:textAppearanceLarge" 
            			android:textSize="10.0sp" 
            			android:textStyle="bold"
            			android:gravity="left" 
            			android:layout_gravity="top" 
            			android:paddingLeft="5.0sp"
            			android:paddingRight="5.0sp" 
            			android:layout_width="fill_parent" 
            			android:layout_height="wrap_content"/>    				
        		
        		</LinearLayout>
        		

			<RelativeLayout
    			android:orientation="vertical" 
    			android:layout_width="fill_parent" 
    			android:layout_height="wrap_content"
    			android:paddingTop="5.0dip"
    			>	
                 
        		<RatingBar android:id="@+id/rating"
        			style="?android:attr/ratingBarStyleSmall"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:isIndicator="true"
        			android:paddingTop="1.0sp"
        			android:numStars="5"
					
					android:layout_alignParentRight="true"
        			android:layout_marginRight="5.0sp"/>
        		
	    	</RelativeLayout>
        	
        </LinearLayout>		
        </LinearLayout>
        	        		
		</LinearLayout>		
            			
    	</RelativeLayout>
    		
    		
    	<ScrollView 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content"
        	android:layout_weight="1">
        
        	<LinearLayout 
