<?xml version="1.0" encoding="UTF-8"?>

  				
    <LinearLayout 
    		android:orientation="vertical" 
    		android:layout_width="fill_parent" 
    		android:layout_height="fill_parent"
    		xmlns:android="http://schemas.android.com/apk/res/android"
    		>
    		
    	<RelativeLayout 
    				android:background="@android:drawable/bottom_bar" 
    				android:layout_width="fill_parent" 
    				android:layout_height="wrap_content">
    			
    		<LinearLayout 
    		android:orientation="horizontal" 
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content">	
    			
    			
    				 
    			<ImageView android:id="@+id/appicon"
					android:paddingLeft="5.0sp"
    			    android:paddingTop="5.0dip"
        			android:layout_width="50px"
        			android:layout_height="50px"
        			android:cropToPadding ="true"
        			android:scaleType="centerCrop"
        			android:layout_gravity="center_vertical|center_horizontal" />	
        			
        		<LinearLayout 
    				android:orientation="vertical" 
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content">
    				
    				<TextView 
            			android:id="@+id/app_name"
            			android:textAppearance="?android:textAppearanceLarge" 
            			android:textSize="18.0sp" 
            			android:textStyle="bold"
            			android:gravity="left" 
            			android:layout_gravity="top" 
            			android:paddingTop="5.0dip"
            			android:paddingLeft="5.0sp"
            			android:paddingRight="5.0sp" 
            			android:layout_width="fill_parent" 
            			android:layout_height="wrap_content"/>
            			
            		<TextView 
            			android:id="@+id/app_ver"
            			android:textAppearance="?android:textAppearanceLarge" 
            			android:textSize="12.0sp" 
            			android:textStyle="bold"
            			android:gravity="left" 
            			android:layout_gravity="top" 
            			android:paddingLeft="5.0sp"
            			android:paddingRight="5.0sp" 
            			android:layout_width="fill_parent" 
            			android:layout_height="wrap_content"/>
            		
            		<TextView 
            			android:id="@+id/app_repo"
            			android:textAppearance="?android:textAppearanceLarge" 
            			android:textSize="10.0sp" 
            			android:textStyle="bold"
            			android:gravity="left" 
            			android:layout_gravity="top" 
            			android:paddingLeft="5.0sp"
            			android:paddingRight="5.0sp" 
            			android:layout_width="fill_parent" 
            			android:layout_height="wrap_content"/>
    				
    				
        		</LinearLayout>
        		

			<RelativeLayout 
    			android:orientation="vertical" 
    			android:layout_width="fill_parent" 
    			android:layout_height="fill_parent"
    			android:paddingTop="5.0dip"
    			android:gravity="right"
    			>	
        	
        		<TextView android:id="@+id/dwn"
            		android:textSize="12sp"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:textColor="#FFFFFF"
            		android:paddingRight="5.0sp"
            		android:layout_centerVertical="true"

            		/>
            
        		<RatingBar android:id="@+id/rating"
        			style="?android:attr/ratingBarStyleSmall"
        			android:layout_below="@id/dwn"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:isIndicator="true"
        			android:paddingTop="5.0sp"
        			android:numStars="5"
        			android:rating="3"
/>
        		
	    </RelativeLayout>
        	
        	
        	</LinearLayout>		
            			
    	</RelativeLayout>
    		
    		
    	<ScrollView 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content"
        	android:layout_weight="1">
        
        	<LinearLayout 
        		android:gravity="center" 
        		android:orientation="vertical" 
        		android:layout_width="fill_parent" 
        		android:layout_height="wrap_content">
            
            	
            <TextView 
            		android:textAppearance="?android:textAppearanceLarge" 
            		android:textSize="18.0sp" 
            		android:textColor="#FFFFBB"
            		android:gravity="left" 
            		android:layout_gravity="top" 
            		android:paddingTop="10.0dip"
            		android:paddingLeft="5.0sp"
            		android:paddingRight="5.0sp" 
            		android:layout_width="fill_parent" 
            		android:layout_height="wrap_content" 
            		android:text="About:"/>
            		
            		
            <TextView 
            		android:id="@+id/descript"
            		android:gravity="left" 
            		android:layout_gravity="top" 
            		android:paddingTop="10.0dip"
            		android:paddingLeft="5.0sp"
            		android:paddingRight="5.0sp" 
            		android:layout_width="fill_parent" 
            		android:layout_height="wrap_content" 
            		/>
            		
           
            <TextView 
            		android:textAppearance="?android:textAppearanceLarge" 
            		android:textSize="18.0sp" 
            		android:textColor="#FFFFBB"
            		android:gravity="left" 
            		android:layout_gravity="top" 
            		android:paddingTop="10.0dip"
            		android:paddingLeft="5.0sp"
            		android:paddingRight="5.0sp"
            		android:paddingBottom="5.0sp" 
            		android:layout_width="fill_parent" 
            		android:layout_height="wrap_content" 
            		android:text="Screenshots:"/>		

			
			<LinearLayout 
        		android:gravity="center" 
        		android:orientation="horizontal" 
        		android:layout_width="fill_parent" 
        		android:layout_height="wrap_content">
			
				<ImageView android:id="@+id/screen1"
					android:layout_gravity="left"
        			android:layout_width="50px"
        			android:layout_height="50px"
        			android:cropToPadding ="true"
        			android:scaleType="fitCenter"
        			android:adjustViewBounds="true"
        			android:src = "@drawable/splashaptoide2" />	
        			
        		<ImageView android:id="@+id/screen2"
					android:layout_gravity="right"
        			android:layout_width="50px"
        			android:layout_height="50px"
        			android:cropToPadding ="true"
        			android:scaleType="fitCenter"
					android:adjustViewBounds="true"
        			android:src = "@drawable/splashaptoide2" />	
			
			</LinearLayout>

        	</LinearLayout>
        </ScrollView>

        <RelativeLayout 
    				android:background="@android:drawable/bottom_bar" 
    				android:layout_width="fill_parent" 
    				android:layout_height="wrap_content"
    				 >
    				
    				<Button 
            			android:id="@+id/btn_market" 
            			android:layout_width="150.0dip" 
            			android:layout_height="wrap_content" 
            			android:layout_margin="5.0dip" 
            			android:text="Search Market" 
            			android:layout_alignParentRight="true" />
            			
            		<Button 
            			android:id="@+id/btn1" 
            			android:layout_width="150.0dip" 
            			android:layout_height="wrap_content" 
            			android:layout_margin="5.0dip" 
            			android:text="Install"
            			android:layout_alignParentLeft="true" />
            			
    	</RelativeLayout>
        
    </LinearLayout>
	




