<?xml version="1.0" encoding="UTF-8"?>

  				
    <LinearLayout 
    		android:orientation="vertical" 
    		android:layout_width="fill_parent" 
    		android:layout_height="fill_parent"
    		xmlns:android="http://schemas.android.com/apk/res/android"
    		>
    		
    	<RelativeLayout 
    				android:background="@android:drawable/bottom_bar" 
    				android:layout_width="fill_parent" 
    				android:layout_height="wrap_content">
    			
    		<LinearLayout 
    		android:orientation="horizontal" 
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content">	
    			
    			<!-- Program icon --> 
    			<ImageView android:id="@+id/appicon"
					android:paddingLeft="5.0sp"
    			    android:paddingTop="5.0dip"
    			    android:layout_width = "65px"
    			    android:layout_height = "65px"
        			android:cropToPadding ="true"
        			android:scaleType="fitCenter"
        			android:layout_gravity="center_vertical|center_horizontal" />	
        			
        		<LinearLayout 
    				android:orientation="vertical" 
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content">
    					
    				
    				<TextView 
            			android:id="@+id/app_name"
            			android:textAppearance="?android:textAppearanceLarge" 
            			android:textSize="18.0sp" 
            			android:textStyle="bold"
            			android:gravity="left" 
            			android:layout_gravity="top" 
            			android:paddingTop="5.0dip"
            			android:paddingLeft="5.0sp"
            			android:paddingRight="5.0sp" 
            			android:layout_width="fill_parent" 
            			android:layout_height="wrap_content"
    					android:scrollHorizontally="true"/>
            		 
					    
            	<LinearLayout 
    				android:orientation="horizontal" 
    				android:layout_width="fill_parent" 
    				android:layout_height="wrap_content">
            			
            			
            	<LinearLayout 
    				android:orientation="vertical" 
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content">
            		<!--Change multiversion-->	
            		<TextView 
            			android:id="@+id/app_ver"
            			android:textAppearance="?android:textAppearanceLarge" 
            			android:textSize="12.0sp" 
            			android:textStyle="bold"
            			android:gravity="left" 
            			android:layout_gravity="top" 
            			android:paddingLeft="5.0sp"
            			android:paddingRight="5.0sp" 
            			android:layout_width="fill_parent" 
            			android:layout_height="wrap_content"/>
            		
            		<TextView 
            			android:id="@+id/app_repo"
            			android:textAppearance="?android:textAppearanceLarge" 
            			android:textSize="10.0sp" 
            			android:textStyle="bold"
            			android:gravity="left" 
            			android:layout_gravity="top" 
            			android:paddingLeft="5.0sp"
            			android:paddingRight="5.0sp" 
            			android:layout_width="fill_parent" 
            			android:layout_height="wrap_content"/>
        				 
        				
					        
        		</LinearLayout>
        		

			<RelativeLayout
    			android:orientation="vertical" 
    			android:layout_width="fill_parent" 
    			android:layout_height="wrap_content"
    			android:paddingTop="5.0dip"
    			>	
                
               <!--  <LinearLayout 
    				android:orientation="vertical" 
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content"> -->
    				
        		<RatingBar android:id="@+id/rating"
        			style="?android:attr/ratingBarStyleSmall"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:isIndicator="true"
        			android:paddingTop="1.0sp"
        			android:numStars="5"
					
					android:layout_alignParentRight="true"
        			android:layout_marginRight="5.0sp"/>
        					
	    	</RelativeLayout>
        	
        	<RelativeLayout
    			android:orientation="vertical" 
    			android:layout_width="fill_parent" 
    			android:layout_height="wrap_content"
    			android:paddingTop="5.0dip"
    			>
            		<!-- <TextView
        				 android:textAppearance="?android:textAppearanceLarge"
        				 android:text="@string/version_prompt"
            			 android:textSize="3.0pt"
            			 android:gravity="left" 
            			 android:layout_gravity="top" 
            			 android:paddingLeft="5.0sp"
            			 android:paddingRight="5.0sp" 
            			 android:layout_width="fill_parent" 
            			 android:layout_height="wrap_content"/>-->
            			
            			<Spinner style="@style/NoArrowSpinner"
					        android:id="@+id/spinnerMultiVersion"
					        android:layout_width="fill_parent"
					        android:prompt="@string/version_prompt" 
					        android:layout_height="30sp"
					        />
            			
            		</RelativeLayout>
        	
        </LinearLayout>
        
        	 						
        </LinearLayout>
        	        		
		</LinearLayout>		
            			
    	</RelativeLayout>
    		
    		
    	<ScrollView 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content"
        	android:layout_weight="1">
        
        	<LinearLayout 
        		android:gravity="center" 
        		android:orientation="vertical" 
        		android:layout_width="fill_parent" 
        		android:layout_height="wrap_content">
            
            <TextView android:id="@+id/dwn"
            		android:gravity="left" 
            		android:paddingTop="10.0dip"
            		android:paddingLeft="5.0sp"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:textColor="#FFFFFF"

            		/>
            		
            <TextView android:id="@+id/size"
            		android:gravity="left" 
            		android:paddingTop="5.0dip"
            		android:paddingLeft="5.0sp"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:textColor="#FFFFFF"

            		/>
            	
            <TextView 
            		android:textAppearance="?android:textAppearanceLarge" 
            		android:textSize="18.0sp" 
            		android:textColor="#FFFFBB"
            		android:gravity="left" 
            		android:layout_gravity="top" 
            		android:paddingTop="10.0dip"
            		android:paddingLeft="5.0sp"
            		android:paddingRight="5.0sp" 
            		android:layout_width="fill_parent" 
            		android:layout_height="wrap_content" 
            		android:text="About:"/>
            		
            		
            <TextView 
            		android:id="@+id/descript"
            		android:gravity="left" 
            		android:layout_gravity="top" 
            		android:paddingTop="10.0dip"
					android:textColor="#FFFFFF"
            		android:paddingLeft="5.0sp"
            		android:paddingRight="5.0sp" 
            		android:layout_width="fill_parent" 
            		android:layout_height="wrap_content" 
            		/>
            		
           
           <TextView
           		android:textAppearance="?android:textAppearanceLarge"
           		android:textSize="18.0sp"
           		android:textColor="#FFFFBB"
           		android:gravity="left"
           		android:layout_gravity="top"
           		android:paddingTop="10.0dip"
           		android:paddingLeft="5.0sp"
           		android:paddingRight="5.0sp"
           		android:paddingBottom="5.0sp"
           		android:layout_width="fill_parent"
           		android:layout_height="wrap_content"
           		android:text="Screenshots:"/>

			<ProgressBar android:id="@+id/pscreens"
 				 android:layout_width="wrap_content"
  				android:layout_height="wrap_content"/>
  				
  				 <TextView 
            		android:id="@+id/noscreens"
            		android:gravity="center" 
            		android:layout_gravity="center" 
            		android:paddingTop="10.0dip"
					android:textColor="#FFFFFF"
            		android:paddingLeft="5.0sp"
            		android:paddingRight="5.0sp" 
            		android:layout_width="fill_parent" 
            		android:layout_height="wrap_content"
            		android:visibility="invisible" 
            		/>

<!-- 				<Gallery -->
<!--         			android:id="@+id/screenshots_gal" -->
<!--         			android:layout_width="fill_parent"  -->
<!--         			android:layout_height="fill_parent" />         -->

<TableLayout android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:orientation="horizontal"
			>
        <TableRow>
            <ImageView android:id="@+id/shot1" android:onClick="screenshotClick" android:scaleType="fitCenter" android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:adjustViewBounds="true" />
            <View android:layout_width="10dip" />
            <ImageView android:id="@+id/shot2" android:onClick="screenshotClick" android:scaleType="fitCenter" android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:adjustViewBounds="true" />
          
        </TableRow>
    </TableLayout>
    
    
<TableLayout android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="15sp">
        <TableRow>
            <ImageView android:id="@+id/shot3" android:onClick="screenshotClick" android:scaleType="fitCenter" android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:adjustViewBounds="true" />
            <View android:layout_width="10dip" />
            <ImageView android:id="@+id/shot4" android:onClick="screenshotClick" android:scaleType="fitCenter" android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:adjustViewBounds="true" />
            <View android:layout_width="10dip" />
            <ImageView android:id="@+id/shot5" android:onClick="screenshotClick" android:scaleType="fitCenter" android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" android:adjustViewBounds="true" />
        </TableRow>
    </TableLayout>
			
