<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_hashid"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal">
    

    <ImageView android:id="@+id/app_icon"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:padding="4sp"
        android:scaleType="fitCenter" 
        android:layout_gravity="center_vertical|center_horizontal"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/app_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:maxLength="16"
            
            android:textColor="#4f4f4f"
            
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
            
		<TextView android:id="@+id/app_name_when_updatable"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textColor="#4f4f4f"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
            
        <!-- <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">--> 
		    
	        <TextView android:id="@+id/installed_versionname"
	            android:textSize="12sp"
	            android:layout_below="@id/app_name" 
	            android:layout_width="wrap_content"
            	android:textColor="#4f4f4f"
	            android:layout_height="wrap_content"/>
	        
	        <TextView android:id="@+id/isDowngradeAvailable"
	            android:textSize="12sp"
	            android:layout_below="@id/app_name" 
	            android:layout_toRightOf="@id/installed_versionname"
	            android:layout_width="wrap_content"
            	android:textColor="#4f4f4f"
	            android:layout_height="wrap_content"/>
	            
        <!-- </LinearLayout>-->
           
		<TextView android:id="@+id/uptodate_versionname"
            android:textSize="12sp"
            android:layout_below="@id/app_name" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#4f4f4f"/>
            
        <RelativeLayout
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:orientation="vertical"
        	android:gravity="right">
        	
        	<TextView android:id="@+id/downloads"
            	android:textSize="12sp"
				android:gravity="right"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="#b3b3b3"
            	/>
            
        	<RatingBar android:id="@+id/stars"
        		style="?android:attr/ratingBarStyleSmall"
        		android:layout_below="@id/downloads"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:isIndicator="true"
        		android:numStars="5"
        		/>
        		
	    </RelativeLayout>
            
            
     </RelativeLayout>
     
 
</LinearLayout>
