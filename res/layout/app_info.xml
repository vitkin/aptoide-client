<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#edece9"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!-- Green Bar -->

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar" />

    <RelativeLayout
        android:id="@+id/app_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar"
        android:layout_marginTop="3sp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24sp"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/app_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4f4f4f" />

            <RatingBar
                android:id="@+id/app_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:numStars="5" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons"
        android:layout_below="@+id/app_header"
        android:background="#edece9"
        android:padding="10dp" >

        <ScrollView
            android:id="@+id/scroller"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/homepage_border"
            android:padding="5dp"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ratings"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/app_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="#4f4f4f"
                            android:textSize="12sp"  />

                        <TextView
                            android:id="@+id/app_downloads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_toRightOf="@+id/app_size"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="#4f4f4f"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/app_store"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/app_size"
                            android:layout_marginLeft="10sp"
                            android:layout_toLeftOf="@+id/app_rating"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="#4f4f4f"
                            android:textSize="12sp"  />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/likes"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/ratings"
                    android:layout_weight="1"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/likesImage"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/like"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/app_likes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="#a8a8a8" />

                    <TextView
                        android:id="@+id/app_dislikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="#a8a8a8" />

                    <ImageView
                        android:id="@+id/dislikesImage"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/dontlike"
                        android:visibility="visible" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinnerMultiVersion"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:prompt="@string/select_version" />

                <CheckBox
                    android:id="@+id/later"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="40sp"
                    android:text="@string/schedule"
                    android:textColor="#3f3f3f" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:paddingLeft="5.0sp"
                    android:paddingRight="5.0sp"
                    android:text="@string/about"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#3f3f3f"
                    android:textSize="18.0sp" />

                <TextView
                    android:id="@+id/app_description"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="5.0sp"
                    android:paddingRight="5.0sp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:paddingLeft="5.0sp"
                    android:paddingRight="5.0sp"
                    android:text="@string/screenshots"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#3f3f3f"
                    android:textSize="18.0sp" />

                <Gallery
                    android:id="@+id/screens"
                    android:layout_width="fill_parent"
                    android:layout_height="182dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/install"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/uninstall"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>