<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#edece9" >

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/groupbtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical" >

                <TextView
                    style="@style/DialogText.Title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/order_popup_title1"
                    android:textColor="@android:color/primary_text_light"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/org_rct"
                    android:checked="false"
                    android:text="@string/order_popup_lst1"
                    android:textColor="@android:color/darker_gray" />

                <RadioButton
                    android:id="@+id/org_abc"
                    android:checked="false"
                    android:text="@string/order_popup_lst2"
                    android:textColor="@android:color/darker_gray" />

                <RadioButton
                    android:id="@+id/org_rat"
                    android:checked="false"
                    android:text="@string/order_popup_lst3"
                    android:textColor="@android:color/darker_gray" />

                <RadioButton
                    android:id="@+id/org_dwn"
                    android:checked="false"
                    android:text="@string/order_popup_lst4"
                    android:textColor="@android:color/darker_gray" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/groupshow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    style="@style/DialogText.Title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/order_popup_title2"
                    android:textColor="@android:color/primary_text_light"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/shw_ct"
                    android:checked="false"
                    android:text="@string/order_popup_catg1"
                    android:textColor="@android:color/darker_gray" />

                <RadioButton
                    android:id="@+id/shw_all"
                    android:checked="true"
                    android:text="@string/order_popup_catg2"
                    android:textColor="@android:color/darker_gray" />
            </RadioGroup>

            <TextView
                style="@style/DialogText.Title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/order_popup_title3"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/adultcontent_toggle"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@drawable/mature_slider"
                android:padding="5dp"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
    </LinearLayout>

