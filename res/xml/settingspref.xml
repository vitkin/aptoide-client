<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:title="@string/settings_title_bar">
  
  
  <PreferenceCategory
        android:title="@string/clear_dwn_title">
        <ListPreference
            android:title="@string/clear_dwn_btn"
            android:summary="@string/clear_dwn_msg"
            android:key="icdown"
            android:defaultValue="g3w"
            android:entries="@array/dwnif"
            android:entryValues="@array/dwnifv" />
    </PreferenceCategory>
            
  
  <PreferenceCategory
        android:title="@string/clear_cache_title">
  		
  	 <Preference
     	android:title="@string/clear_cache_btn"
        android:summary="@string/clear_cache_msg"
        android:key="clearcache" />
 
  </PreferenceCategory>
  
  <PreferenceCategory
        android:title="@string/credentialssettings">
	
	 <Preference
     	android:title="@string/clearcredentials"
        android:summary="@string/clearcredentials_summary"
        android:key="clearcredentials" />
          		
  	 <Preference
     	android:title="@string/setcredentials"
        android:summary="@string/setcredentials_summary"
        android:key="setcredentials" />
        
  </PreferenceCategory>
  <PreferenceCategory
        android:title="Hardware Filters">
      <Preference
     	android:title="Hardware Specs"
        android:summary="Check your hardware specifications"
        android:key="hwspecs" />
      <CheckBoxPreference
     	android:title="Filter Applications"
        android:summary="Don't show applications not compatible with your device."
        android:key="hwspecsChkBox"
        android:defaultValue="true" />
     
  </PreferenceCategory>
  
      <PreferenceCategory
        android:title="Scheduled Downloads">
      
      <CheckBoxPreference
     	android:title="Automatic Install"
        android:summary="Install scheduled downloads automatically when a Wifi connection is present"
        android:key="schDwnBox" 
        />
      </PreferenceCategory>
</PreferenceScreen>
