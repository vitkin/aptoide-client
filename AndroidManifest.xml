        <activity
            android:configChanges="orientation"
            android:name=".StoreManager"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <service android:name=".ServiceExample"></service>
        <service android:name=".ExtrasService" android:process=":Extras"></service>

        <provider
            android:name=".ExtrasContentProvider"
            android:authorities="extras.contentprovider" >
