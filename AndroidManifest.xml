<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cm.aptoide.pt"
    android:versionCode="325"
    android:versionName="2.6.2" >

    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="4" />
    
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
    <application
        
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:configChanges="orientation"
            android:name=".Start"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
             android:name=".Aptoide"
             android:configChanges="orientation"
             android:label="@string/app_name"
             android:theme="@android:style/Theme.Light.NoTitleBar" >
             <meta-data
                 android:name="android.app.default_searchable"
                 android:value=".SearchManager" />
         </activity>
 
        <activity
            android:configChanges="orientation"
            android:name=".StoreManager"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        
        <activity
            android:configChanges="orientation"
            android:name=".ApkInfo"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        
        <activity
            android:configChanges="orientation"
            android:name=".SearchManager"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/find" />
        </activity>
        
        <service android:name=".DownloadQueueService"></service>
        <service android:name=".ExtrasService" android:process=":Extras"></service>

        <provider
            android:name=".ExtrasContentProvider"
            android:authorities="extras.contentprovider" >
        </provider>
        
        <receiver android:name=".InstalledBroadcastReceiver" >
            <intent-filter>
                
                <action android:name="android.intent.action.PACKAGE_ADDED"/>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>
                <data android:scheme="package" />
                
            </intent-filter>
        </receiver>

    </application>

</manifest>